<div id="user-profile">
  <div class="container">
    <div class="profile-header">
      <div class="profile-info">
        <div class="avatar"><%= user_initials(@user) -%></div>
        <div class="user-details">
          <h1>
            <%= @user.name -%>

            <% if sessions_current_user_id == @user.id %>
            <span class="badge">Current user</span>
            <%end %>
          </h1>
          <p class="email cursor-pointer" id="user-email" title="Copy to clipboard"><%= @user.email -%></p>
        </div>
      </div>

      <%= link_to edit_user_path(@user), class: "button btn btn-primary edit-btn" do %>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
        </svg>
        Edit
      <% end %>
    </div>

    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-header">
          <div class="stat-icon blue">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <span class="stat-label">Role</span>
        </div>
        <div class="stat-value"><%= @user.is_administrator? ? 'Administrator' : 'User' -%></div>
      </div>

      <div class="stat-card">
        <div class="stat-header">
          <div class="stat-icon blue">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
            </svg>
          </div>
          <span class="stat-label">Time active</span>
        </div>
        <div class="stat-value"><%= user_time_active(@user) -%></div>
      </div>
      <div class="stat-card">
        <div class="stat-header">
          <div class="stat-icon blue">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><polyline points="10 17 15 12 10 7"/><line x1="15" y1="12" x2="3" y2="12"/>
            </svg>
          </div>
          <span class="stat-label">Sign in count</span>
        </div>
        <div class="stat-value"><%= @user.sign_in_count -%></div>
      </div>
      <div class="stat-card">
        <div class="stat-header">
          <div class="stat-icon blue">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
          </div>
          <span class="stat-label">Member since</span>
        </div>
        <div class="stat-value"><%= @user.created_at.strftime("%Y-%m-%d") -%></div>
      </div>
    </div>

    <div class="profile-grid">
      <div class="profile-card">
        <div class="profile-card-header">
          <h2 class="profile-card-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>
            </svg>
            User Profile
          </h2>
        </div>
        <div class="profile-card-content">
          <div class="info-grid">
            <div class="info-item">
              <span class="info-label">Person</span>
              <span class="info-value link">
                <%= person_link(@user.person) %>
              </span>
            </div>
            <div class="info-item">
              <span class="info-label">Created by</span>
              <span class="info-value">Dmitriev, Dmitry</span>
            </div>
            <div class="info-item">
              <span class="info-label">ORCID</span>
                <% if @user.orcid %>  
                  <%= link_to(@user.orcid, @user.orcid , class: 'info-value link', target: '_blank') -%>
                <% else %>
                  <%= content_tag(:span, 'NONE (add to Person)', class: 'info-value muted') -%>
                <% end %>
            </div>
            <div class="info-item">
              <span class="info-label">Wikidata ID</span>
                <% if @user.wikidata_id %>  
                  <%= link_to("https://www.wikidata.org/wiki/#{@user.wikidata_id}", @user.wikidata_id , class: 'info-value link', target: '_blank') -%>
                <% else %>
                  <%= content_tag(:span, 'NONE (add to Person)', class: 'info-value muted') -%>
                <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="profile-card">
        <div class="profile-card-header">
          <h2 class="profile-card-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
            </svg>
            Session History
          </h2>
        </div>
        <div class="profile-card-content">
          <div class="session-item current">
            <div class="session-left">
              <span class="session-dot active"></span>
              <span class="session-type">Current sign in</span>
            </div>
            <div class="session-right">
              <div class="session-date"><%= @user.current_sign_in_at.strftime("%B %d, %Y at %I:%M %p") if @user.current_sign_in_at %></div>
              <div class="session-ip">IP: ::1</div>
            </div>
          </div>
          <div class="session-item previous">
            <div class="session-left">
              <span class="session-dot inactive"></span>
              <span class="session-type">Last sign in</span>
            </div>
            <div class="session-right">
              <div class="session-date"><%= @user.last_sign_in_at.strftime("%B %d, %Y at %I:%M %p") if @user.current_sign_in_at %></div>
              <div class="session-ip">IP: ::1</div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% if @user.api_access_token %>
    <div class="profile-card">
      <div class="profile-card-header">
        <h2 class="profile-card-title">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"/>
          </svg>
          API Access Token
        </h2>
      </div>
      <div class="profile-card-content">
        <div class="token-container">
          <input type="password" class="token-input" value="<%= @user.api_access_token %>" readonly id="tokenInput">
          <button class="button token-btn" id="toggle-token-btn" title="Show/Hide">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/>
            </svg>
          </button>
          <button class="button token-btn" id="copy-token-btn" title="Copy to clipboard">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
            </svg>
          </button>
        </div>
        <div class="token-warning">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
          Never share your API token. Keep it safe and confidential.
        </div>
      </div>
    </div>
  <% end %>


 <div class="profile-card">
      <div class="profile-card-header">
        <h2 class="profile-card-title">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
          </svg>
          Preferences
        </h2>
      </div>
      <div class="profile-card-content">
        <div class="preferences-grid">
          <div class="preference-section">
            <div class="preference-header">
              <span class="preference-title">General</span>
        <%= form_for @user, url: reset_preferences_user_path(@user), method: :patch do |f| %>
          <%= f.button "Reset",
            class: "button btn-medium-size btn btn-update",
            data: { confirm: "Warning, this will reset all preferences aross all projects" } 
          %>
        <% end %>
            </div>
      

            <div class="code-block">
<%= JSON.pretty_generate(@user.preferences).html_safe %>
            </div>
          </div>
          <div class="preference-section">
            <div class="preference-header">
              <span class="preference-title">Favorites</span>
         <%= form_for @user, url: reset_hub_favorites_user_path(@user), method: :patch do |f| %>
          <%= f.button "Reset (for #{sessions_current_project.name})",
            class: "button btn-medium-size btn btn-update",
            data: { confirm: "Clears your favorite cards for this project" } 
          %>
        <% end %>
            </div>
            <div class="code-block">
<%= JSON.pretty_generate(@user.hub_favorites).html_safe %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="admin-card">
      <div class="profile-card-header flex-row flex-separate">
        <h2 class="profile-card-title">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          Administration
        </h2>
        <span class="admin-badge">Not visible to user</span>
      </div>
      <div class="profile-card-content">
        <div class="admin-section margin-large-bottom">
          <div class="admin-section-title">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/>
            </svg>
            User data
          </div>
          <div class="admin-links">
            <a href="#" class="admin-link">Created</a>
            <span>/</span>
            <a href="#" class="admin-link">Updated</a>
          </div>
        </div>
        
        <div class="admin-grid">
          <div class="admin-section">
            <div class="admin-section-title">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="14" height="14" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"></path>
              </svg>
              User's projects
            </div>
            <div class="project-list">
              <% if @user.projects.any? %>
                <%= @user.projects.order(:name).collect{|n| content_tag(:div, link_to(n.name, select_project_path(n), class: 'project-item'))}.join.html_safe %>
              <% else %>
                <div><i>None</i></div>
              <% end %>
            </div>
          </div>
     
          
          <div class="admin-section">
            <div class="admin-section-title">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>
              </svg>
              User's data in projects (quick, not comprehensive)
            </div>
            <div class="data-list">
              <% p = @user.data_in_projects %>
              <% if p.count > 0 %>
                <%= p.collect{|n| content_tag(:div, n, class: 'data-item')}.join.html_safe %>
              <% else %>
                <div><i>Not found in core data</i></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
