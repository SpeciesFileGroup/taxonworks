<h3> Existing Distributions </h3>

<table class="underlined_rows">
  <tr>
    <th>Geographic Area</th>
    <th>Source</th>
    <th>Updater</th>
    <th>Updated On</th>
    <th></th>
  </tr>
  <tbody>
  <% AssertedDistribution.includes(:geographic_area).where(otu_id: otu.id).order('geographic_areas.name ASC').each { |distribution| %>
      <tr>
        <td>
          <%= distribution.geographic_area.name %>
        </td>
        <td>
          <%= source_tag(distribution.source) %>
        </td>
        <td>
          <%= user_tag(distribution.updater) %>
        </td>
        <td>
          <%= object_time_since_update_tag(distribution) %> ago
        </td>
        <td>
          <%= link_to 'destroy', distribution, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% } %>
  </tbody>
</table>
