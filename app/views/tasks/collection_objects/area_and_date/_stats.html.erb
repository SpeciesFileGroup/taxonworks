<% a = @collection_objects_count %>
<%= "#{a} total records - created on by" -%>

<% if (a < 1000) %>
    day
    <%= line_chart(@collection_objects.limit(100).group_by_day("collection_objects.created_at").count) %>
<% elsif (a < 10000) %>
    week
    <%= line_chart(@collection_objects.limit(100).group_by_week("collection_objects.created_at").count) %>
<% elsif (a < 100000) %>
    month
    <%= line_chart(@collection_objects.limit(100).group_by_month("collection_objects.created_at").count) %>
<% else %>
    year
    <%= line_chart(@collection_objects.limit(100).group_by_year("collection_objects.created_at").count) %>
<% end %>
