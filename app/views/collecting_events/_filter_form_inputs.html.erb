
<%= form_tag(url, {method: 'get', id: id, remote: true}) do %>
    <table class="no-shadow">
      <tr class="top_align_text">
        <td><p>Originating between</p></td>
        <td>
          <table class="no-shadow">
            <tr>
              <td>Day</td>
              <td>Month</td>
              <td>Year</td>
              <td>Datepicker</td>
            </tr>
            <tr>
              <td>
                <input type=text id="start_date_day" name="start_date_day" size="2" maxlength="2" />
              </td>
              <td>
                <%= select_tag('start_date_month', options_for_select(Utilities::Dates::MONTHS_FOR_SELECT, selected: @collecting_event.start_date_month), include_blank: true) -%>
              </td>
              <td>
                <input type=text id="start_date_year" name="start_date_year" size="4" maxlength="4" />
              </td>
              <td>
                <!-- https://api.jqueryui.com/datepicker/ -->
                <label for="st_datepicker"></label>
                <input type="text" id="st_datepicker" name="st_datepicker" size="10"/>
              </td>              
            </tr>
          </table>
        </td>
      </tr>
      <tr class="top_align_text">
        <td class="justify_left"><p>And</p></td>
        <td>
          <table class="no-shadow">
            <tr class="top_align_text">
              <td>Day</td>
              <td>Month</td>
              <td>Year</td>
              <td>Datepicker</td>
            </tr>          
            <tr>
              <td>
                <input type=text name="end_date_day" id="end_date_day" size="2" maxlength="2"/>
              </td>
              <td>
                <%= select_tag('end_date_month', options_for_select(Utilities::Dates::MONTHS_FOR_SELECT, selected: @collecting_event.end_date_month), include_blank: true) -%>
              </td>
              <td>
                <input type=text name="end_date_year" id="end_date_year" size="4" maxlength="4"/>
              </td>
              <td>
                <!-- https://api.jqueryui.com/datepicker/ -->
                <label for="en_datepicker"></label>
                <input type="text" id="en_datepicker" name="en_datepicker" size="10"/>
              </td>              
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td class="field">
          <label for="verbatim_locality_text">Verbatim locality containing</label>
        </td>
        <td>
          <input type=text name="verbatim_locality_text" id="verbatim_locality_text" size="35"/>
        </td>
      </tr>
      <tr>
        <td class="field"><label for="any_label_text">Any label containing</label></td>
        <td>
          <input type=text id="any_label_text" name="any_label_text" size="35"/>
        </td>
      </tr>
      <tr>
        <td class="field">
          <label for="identifier_text">An identifier containing</label>
        </td>
        <td>
          <input type=text name="identifier_text" id="identifier_text" size="35"/>
        </td>
      </tr>
    </table>
    <div><%= submit_tag('Find', data: {side: side}) %></div>
<% end %>
