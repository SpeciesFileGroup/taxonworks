<%= form_for(@project) do |f| %>
  <%= render 'shared/errors', object: @project %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= check_box_tag('project[create_with_current_user]', '1', true) %>
    <%= f.label :add_me_to_the_project  %>
  </div>

  <div class="field">
    <%= f.label :api_access_token %><br>
    <%= radio_button_tag 'project[set_new_api_access_token]', true %> <%= f.label :generate_new_token %>
    <br>
    <%= radio_button_tag 'project[clear_api_access_token]', true %> <%= f.label :clear_api_access_token %> <em> Disables public API access to all project data. </em>
    <% if Rails.env.production? && @project.complete_dwc_download_is_public? %>
      <span class="feedback-warning">Data provider links to TaxonWorks data may depend on this access token, and in that case will break if it's cleared.</span>
    <% end %>
  </div>

  <% if !is_project_member_by_id?(sessions_current_user_id, sessions_current_project_id) -%>
    <div class="field">
      <%= check_box_tag 'project[project_members_attributes][0][user_id]', sessions_current_user_id, true %> <%= f.label :add_yourself_to_project %><br>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :data_curation_issue_tracker_url %><br>
    <%= f.text_field :data_curation_issue_tracker_url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
