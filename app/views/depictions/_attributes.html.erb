<p>
  <strong>Depiction object:</strong>
  <%= object_link( @depiction.depiction_object.metamorphosize) %>
</p>

<p>
  <strong>Image:</strong>
  <%= link_to( depiction_tag(@depiction, size: :medium), @depiction.image.image_file.url ) %>
</p>

<p>
  <strong>Image id:</strong>
  <%= link_to(@depiction.image_id.to_s, image_path(@depiction.image_id)) %>
</p>

<div class="attribute_set" data-title="Caption etc.">
  <p>
    <strong>Caption</strong>
    <%= @depiction.caption -%>
  </p>

  <p>
    <strong>Figure label</strong>
    <%= @depiction.figure_label-%>
  </p>
</div>

<p>
  <strong>Is metadata depiction</strong>
  <%= @depiction.is_metadata_depiction -%>
</p>

<div class="attribute_set" data-title="SVG">
  <p>
    <strong>SVG clip</strong>
    <%= @depiction.svg_clip -%>
  </p>

  <p>
    <strong>SVG View box</strong>
    <%= @depiction.svg_view_box -%>
  </p>
</div>

<% if @depiction.sled_image_id %>
<div class="attribute_set" data-title="Sled">
  <p>
    <strong>Sled image id</strong>

    <%= link_to(@depiction.sled_image_id.to_s, grid_digitize_task_path(sled_image_id: @depiction.sled_image_id)) -%>

  </p>

  <p>
    <strong>Sled image x position</strong>
    <%= @depiction.sled_image_x_position -%>
  </p>

  <p>
    <strong>Sled image x position</strong>
    <%= @depiction.sled_image_y_position -%>
  </p>
</div>
<% end %>
