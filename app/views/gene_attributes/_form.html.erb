<%= form_for(@gene_attribute) do |f| %>
    <%= render 'shared/errors', object: @gene_attribute %>

    <div class="required">
      <div class="field">
        <%= f.label :descriptor %>
        <br>
        <%= f.text_field :descriptor %>
      </div>

      <div class="field">
        <%= f.label :sequence %>
        <br>
        <%= render partial: 'workbench/elements/forms/ajax_select',
                   locals:  {controller:  'sequences',
                             object: 'gene_attribute',
                             method:  'sequence',
                             tag_id:  'sequence_for_gene_attribute',
                             display:  sequence_autocomplete_selected_tag(@gene_attribute.sequence),
                             size: 20} %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>