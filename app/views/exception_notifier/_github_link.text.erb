<% if TaxonworksNet.commit_sha %>
  <%= /\A(app|lib)\/([^:]+):(\d+)/.match(@backtrace.first) do |m|
        "https://github.com/SpeciesFileGroup/taxonworks/blob/#{TaxonworksNet.commit_sha}/#{m[1]}/#{m[2]}#L#{m[3]}"
      end || "Exception outside Taxonworks code"
  %>
<% else %>
  REVISION not available, link to exception location cannot be generated.
<% end %>
